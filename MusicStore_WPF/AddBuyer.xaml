<Window x:Class="MusicStore_WPF.AddBuyer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicStore_WPF"
        mc:Ignorable="d"
        Title="AddBuyer" Height="225" Width="400">
    <Grid Background="AntiqueWhite">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Name" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
        <TextBox x:Name="NameBox" Grid.Column="1" Grid.ColumnSpan="2" Background="LightGray" Margin="2"/>
        <Button x:Name="Add" Content="Add" Click="Add_Click" Grid.Column="1" Grid.Row="1" FontSize="30" Margin="2"/>
    </Grid>
</Window>
